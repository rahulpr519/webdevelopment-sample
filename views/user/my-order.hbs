<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/" class="btn btn-secondary ms-auto" style="width: 179px;">More products</a>
        </div>
        <table class="table mt-5">
  <thead>
    <tr>
      <th scope="col">Date</th>
      <th>Address</th>
      <th>Pincode</th>
      <th>Mobile</th>
      <th scope="col">Amount</th>
      <th scope="col">Payment</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
      {{#each order}}
    <tr>
      
      <td>{{this.date}}</td>
      <td>{{this.deliveryDetails.address}}</td>
      <td>{{this.deliveryDetails.pincode}}</td>
      <td>{{this.deliveryDetails.mobile}}</td>
      <td>{{this.totalAmount}}</td>
      <td>{{this.paymentMethod}}</td>
      <td>{{this.status}}</td>
      <td><a href="/view-order-products/{{this._id}}" class="btn btn-primary">View products</a></td>
      
    </tr>
        {{/each}}
  </tbody>
</table>
    </div>
</section>